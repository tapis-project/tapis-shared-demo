    <artifactId>tapis-shared-notifications</artifactId>
    <dependencies>
        <dependency>
            <groupId>edu.utexas.tacc.tapis</groupId>
            <artifactId>tapis-shared-lib</artifactId>
            <version>${project.parent.version}</version>
